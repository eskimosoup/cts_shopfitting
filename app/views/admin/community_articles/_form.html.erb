<%= form_for([:admin, @community_article]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :sub_heading %><br />
      <%= f.text_field :sub_heading %>
    </div>

    <div class="field">
      <%= f.label :summary %><br />
      <%= f.text_area :summary %>
    </div>

    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, class: 'tinymce' %>
    </div>

    <%= f.image_field :image %>

    <div class="field">
      <%= f.label :date %><br />
      <%= f.text_field :date, class: 'datepicker' %>
    </div>

  <% end -%>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
